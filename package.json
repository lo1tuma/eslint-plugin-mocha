{
    "name": "eslint-plugin-mocha",
    "version": "5.0.0",
    "description": "Eslint rules for mocha.",
    "engines": {
        "node": ">=6.0.0"
    },
    "main": "index.js",
    "files": [
        "index.js",
        "lib/",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "pretest": "eslint .",
        "test": "npm run test:unit:with-coverage",
        "test:unit": "mocha test --recursive --reporter dot",
        "test:unit:with-coverage": "nyc npm run test:unit",
        "coveralls": "cat ./build/coverage/lcov.info | coveralls",
        "changelog": "pr-log"
    },
    "dependencies": {
        "ramda": "^0.25.0"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "coveralls": "^3.0.0",
        "eslint": "^5.0.0",
        "eslint-config-holidaycheck": "^0.12.1",
        "eslint-plugin-node": "^6.0.1",
        "mocha": "^5.0.1",
        "nyc": "^12.0.2",
        "pr-log": "^3.0.0"
    },
    "peerDependencies": {
        "eslint": ">= 4.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/lo1tuma/eslint-plugin-mocha.git"
    },
    "author": "Mathias Schreck <schreck.mathias@gmail.com>",
    "contributors": [
        "Alexander Schmidt <alexanderschmidt1@gmail.com>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lo1tuma/eslint-plugin-mocha/issues"
    },
    "homepage": "https://github.com/lo1tuma/eslint-plugin-mocha",
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "mocha"
    ],
    "nyc": {
        "all": true,
        "cache": false,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "exclude": [
            "build",
            "test"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "check-coverage": true,
        "report-dir": "build"
    }
}
