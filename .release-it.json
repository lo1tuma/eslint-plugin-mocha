{
    "git": {
        "requireBranch": "master",
        "changelog": false
    },
    "github": {
        "release": true,
        "releaseName": "${version}"
    },
    "npm": {
        "publish": true
    },
    "hooks": {
        "before:init": ["npm run lint", "npm run test"],
        "after:bump": ["npm run changelog ${version}"]
    }
}
