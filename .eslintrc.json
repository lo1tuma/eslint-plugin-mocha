{
    "extends": "holidaycheck/es2015",
    "plugins": [ "node" ],

    "env": {
        "node": true
    },

    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 2017
    },

    "rules": {
        "node/no-unsupported-features": "error"
    },

    "overrides": [
        {
            "files": [ "test/**/*.js" ],
            "env": { "mocha": true },
            "rules": {
                "max-nested-callbacks": [ "error", 8 ]
            }
        }
    ]
}
